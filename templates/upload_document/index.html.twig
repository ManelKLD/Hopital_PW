{% extends 'base.html.twig' %}

{% block title %}Insertion Document
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1></h1>

		<ul>
			<h1>Insérez un document</h1>

			{{ form_start(form) }}
			{# ... #}

			<div class="container">
				<div class="row">
					<div class="col-6">

						<div class="form-group">
							{{ form_row(form.document, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="col-3">
						<div class="form-group">
							{{ form_row(form.idPatient, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="col-3">
						<div class="form-group">
							{{ form_row(form.nature, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="date">au{{dateAuj}}</div>
					</div>

				</div>

				<div class="col-3">
					<div class="form-group">
						{{ form_row(form.dateAjout, {'attr': {'class': 'form-control'}}) }}
					</div>

				</div>

				<div class="row text-center">
					<div class="form-group col-sm">
						<button type="submit" class="btn btn-primary">Insérer</button>
					</div>
				</div>
			</div>

			{#{{ form_row(form) }}#}

			{{ form_end(form) }}</ul>
	</div>
{% endblock %}
